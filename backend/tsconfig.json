{
    "compilerOptions": {
        "module": "commonJS",
        "target": "esnext",
        "moduleResolution": "node",
        "isolatedModules": false,
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "lib": [
            "dom",
            "es6"
        ],
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "../*"
            ]
        }
    },
    "include": [
        "../**/*.ts",
        "../types/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}